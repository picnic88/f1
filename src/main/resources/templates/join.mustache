{{>layouts/header}}
<div class="container p-5">
    <h1>회원가입</h1>
    <form action="/joinProc" method="post">
        <div class="mb-3">
            <label>아이디</label>
            <input type="text" name="loginId" class="form-control" placeholder="아이디 입력" required>
        </div>
        <div class="mb-3">
            <label>비밀번호</label>
            <input type="password" name="password" class="form-control" placeholder="비밀번호 입력" required>
        </div>
        <div class="mb-3">
            <label>닉네임</label>
            <input type="text" name="nickname" class="form-control" placeholder="닉네임 입력" required>
        </div>
        <input type="hidden" name="role" value="USER">

        <button type="submit" class="btn btn-primary">가입하기</button>
    </form>
</div>
{{>layouts/footer}}